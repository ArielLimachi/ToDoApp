<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<display-name>TaskHandler</display-name>
	<servlet>
		<servlet-name>TaskServlet</servlet-name>
		<servlet-class>jalasoft.com.servlets.TaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TaskServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<display-name>ListHandler</display-name>
	<servlet>
		<servlet-name>ListServlet</servlet-name>
		<servlet-class>jalasoft.com.servlets.ListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListServlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	<display-name>DeleteTask</display-name>
	<servlet>
		<servlet-name>DeleteServlet</servlet-name>
		<servlet-class>jalasoft.com.servlets.DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<display-name>EditTask</display-name>
	<servlet>
		<servlet-name>EditServlet</servlet-name>
		<servlet-class>jalasoft.com.servlets.EditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditServlet</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<display-name>SearchTask</display-name>
	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>jalasoft.com.servlets.SearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

</web-app>